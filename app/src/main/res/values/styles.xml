<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="main_item_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/main_item_size</item>
        <item name="android:textColor">@color/main_item_color</item>
        <item name="android:layout_marginBottom">@dimen/raw_margin_bottom</item>
    </style>

    <style name="senseItemStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/raw_margin_bottom</item>
        <item name="android:textSize">@dimen/sense_item_size</item>
        <item name="android:textColor">@color/sense_item_color</item>
    </style>

    <style name="exampleItemStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/raw_margin_bottom</item>
        <item name="android:textSize">@dimen/example_item_size</item>
        <item name="android:textColor">@color/example_item_color</item>
    </style>

    <style name="extraItemStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/extra_item_size</item>
        <item name="android:textColor">@color/extra_item_color</item>
    </style>

    <style name="labelItemStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/label_item_size</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="cardButtonStyle">
        <item name="background">@android:color/transparent</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
</resources>
